<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_level2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a00961774.comp3717.bcit.ca.newwestvoyager.SelectLevel2">

    <Button
        android:text="Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#428bca"
        android:id="@+id/mainMenuButton_selectLevel"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickMainMenu" />

    <TextView
        android:text="Select Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textSize="32sp"
        android:id="@+id/selectLevelTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Background image of 2nd level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:id="@+id/backgroundImg_placeholder"
        android:layout_below="@+id/selectLevelTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Name of 2nd Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstLevelTitle"
        android:layout_alignBottom="@+id/backgroundImg_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:text="High Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/highScore_placeholder"
        android:layout_below="@+id/backgroundImg_placeholder"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectLevel1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickDifficultyPage" />

    <Button
        android:text="Level 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toLevel3"
        android:onClick="onClickSelectLevel3"
        android:layout_alignBaseline="@+id/mainMenuButton_selectLevel"
        android:layout_alignBottom="@+id/mainMenuButton_selectLevel"
        android:layout_toRightOf="@+id/toLevel1"
        android:layout_toEndOf="@+id/toLevel1" />

    <Button
        android:text="Level 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toLevel1"
        android:onClick="onClickSelectLevel1"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/toLevel3"
        android:layout_alignBottom="@+id/toLevel3"
        android:layout_alignRight="@+id/selectLevelTitle"
        android:layout_alignEnd="@+id/selectLevelTitle" />
</RelativeLayout>
