<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a00961774.comp3717.bcit.ca.newwestvoyager.StartMenu">

    <TextView
        android:text="New West Voyager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/applicationTitle"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continueButton"
        android:background="#5cb85c"
        android:onClick="onClick_startMenuToHowToPlay"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameTextField"
        android:layout_above="@+id/randUsernameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <Button
        android:text="Generate Random Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randUsernameButton"

        android:layout_marginBottom="59dp"
        android:layout_above="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:onClick="randomiseUsername"/>

    <TextView
        android:text="Enter username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterUsernameTextView"
        android:layout_above="@+id/usernameTextField"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

</RelativeLayout>
